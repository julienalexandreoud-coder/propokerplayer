{
    "manifest_version": 3,
    "name": "Poker Assistant Pro",
    "version": "1.2",
    "description": "AI-powered GTO Poker Assistant with Simplified Turn Detection",
    "permissions": [
        "activeTab",
        "captureVisibleTab",
        "storage"
    ],
    "host_permissions": [
        "https://generativelanguage.googleapis.com/*",
        "<all_urls>"
    ],
    "background": {
        "service_worker": "background.js"
    },
    "content_scripts": [
        {
            "matches": [
                "<all_urls>"
            ],
            "js": [
                "content.js"
            ],
            "all_frames": true
        }
    ],
    "action": {
        "default_popup": "popup.html"
    }
}